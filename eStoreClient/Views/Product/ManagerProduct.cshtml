@using BusinessObject

@{
    List<Product> products = ViewBag.Products;
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" asp-controller="Admin" asp-action="ManagerProduct">Manager Product</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Manager Member</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Manager Order</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
    </ul>
  </div>
</nav>

<h3><a asp-controller="Product" asp-action="Create">Create</a></h3>
<br/>

<table class="table">
    <thead>
        <tr>
            <th>
                CategoryID
            </th>
            <th>
                ProductName
            </th>
            <th>
               Weight
            </th>
             <th>
               UnitPrice
            </th>
             <th>
                UnitStock
            </th>
            <th>
                <h1>Action</h1>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in products)
        {
            <tr>
                <td>
                   @item.CategoryId
                </td>
                 <td>
                   @item.ProductName
                </td>
                 <td>
                   @item.Weight
                </td>
                 <td>
                   @item.UnitPrice
                </td>
                 <td>
                   @item.UnitStock
                </td>
                <td>
                    <a href="/Product/Update?id=@item.ProductId">Update</a>
                    <a href="/Product/Delete?id=@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
